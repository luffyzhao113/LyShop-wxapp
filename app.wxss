.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.multi-ellipsis--l2 {
  -webkit-line-clamp: 2;
}

.multi-ellipsis--l2, .multi-ellipsis--l3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.multi-ellipsis--l3 {
  -webkit-line-clamp: 3;
}


