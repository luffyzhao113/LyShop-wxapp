/* pages/category/index.wxss */
.swiper-view {
  width: 750rpx;
  height: 240rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.swiper-view swiper, .swiper-view swiper .slide-image {
  width: 710rpx;
  height: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper-view .swiper-back {
  position: absolute;
  width: 100%;
  height: 70%;
  background-color: #e41f19;
  top: 0;
  left: 0;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.category-tabs {
  box-sizing: border-box;
  padding-right: 90rpx;
  position: relative;
}

.category-tabs .category-screen {
  width: 90rpx;
  text-align: center;
  height: 90rpx;
  position: absolute;
  right: 0;
  top: 0;
  line-height: 90rpx;
  display: inline-block;
}

.category-screen-box {
  border-bottom: 1px solid #e9eaec;
  box-sizing: border-box;
  padding: 30rpx 0;
}

.screenBox-mark {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 998;
  background-color: rgba(0, 0, 0, 0);
  width: 100vw;
  height: 100vh;
}

.goods-box {
  padding: 15rpx;
  box-sizing: border-box;
}
