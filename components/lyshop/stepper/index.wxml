<!--components/lyshop/stepper/index.wxml-->
<view class="stepper grid col-3">
  <view class="bg-ghost-white radius text-center" hover-class="stepper-minus-hover" hover-stay-time="70" bindtap="minus">
    <text class="cuIcon-move text-black"></text>
  </view>
  <view>
    <input type="number" value="{{ value }}"  class="text-center"/>
  </view>
  <view class="bg-ghost-white radius text-center" hover-class="stepper-plus-hover" hover-stay-time="70" bindtap="plus">
    <text class="cuIcon-add text-black"></text>
  </view>
</view>
