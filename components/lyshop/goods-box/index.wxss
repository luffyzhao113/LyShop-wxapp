/* components/lyshop/goods-box/index.wxss */
.goods-box{
  margin-top: 20rpx;
  background-color: #fff;
}
.goods-box::after{
  display: table;
  content: '';
  clear:both;
}
.goods-box .goods-box-header{
  position: relative;
  height: 80rpx;
  padding: 0 30rpx;
  line-height: 80rpx;
  border-bottom: 1rpx #e9eaec solid;
}
.goods-box .goods-box-header::after{
  display: table;
  content: '';
  clear:both;
}
.goods-box .goods-box-header-has-link{
  text-align: center;
  position: relative;
  height: 80rpx;
  padding: 0 30rpx;
  line-height: 80rpx;
  border-bottom: 1rpx #e9eaec solid;
}

.goods-box .goods-box-header-has-link .goods-box-header-title-has-link::before{
  content: '';
  position: absolute;
  border-bottom: 4rpx #e41f19 solid;
  width: 10rpx;
  top: 50%;
  left: 0;
  transform: rotate(125deg) translateY(-50%);
}

.goods-box .goods-box-header-has-link .goods-box-header-title-has-link{
  display: inline-block;
  padding: 0 30rpx 0 34rpx;
  color: #e41f19;
  position: relative;
  font-weight: bold;
  font-size: 36rpx;
}

.goods-box .goods-box-header-has-link .goods-box-header-title-has-link::after{
  content: '';
  position: absolute;
  border-bottom: 4rpx #e41f19 solid;
  width: 8rpx;
  top: 50%;
  right: 0;
  transform: rotate(125deg) translateY(-50%);
}


.goods-box .goods-box-header .goods-box-header-title{
  width: 80%;
  float: left;
}
.goods-box .goods-box-header .goods-box-header-link{
  width: 20%;
  float: right;
  text-align: right;
}
.goods-box .goods-box-header::before{
  position: absolute;
  content: ' ';
  width: 10rpx;
  height: 60rpx;
  top: 10rpx;
  background: #e41f19;
  left:10rpx;
}

.goods-box .goods-box-body{
  padding: 15rpx;
  box-sizing: border-box;
}