.multi-ellipsis--l2 {
  -webkit-line-clamp: 2;
}

.multi-ellipsis--l2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.goods-item {
  width: 360rpx;
  padding: 10rpx;
  box-sizing: border-box;
  float: left;
}

.goods-item .item-image {
  width: 340rpx;
  height: 340rpx;
  overflow: hidden;
  position: relative;
}

.goods-item .item-image image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.goods-item .item-image .item-tag {
  position: relative;
  z-index: 9;
}